@model Passenger
<div class="col-12">
    <div class="card">
        <form method="post">
            <div class="card-header">
                <h4>Create Passenger</h4>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="FullName">Full Name</label>
                    <input asp-for="FullName" class="form-control">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                    @*<div class="valid-feedback">Good job!</div>*@
                </div>
                <div class="form-group">
                    <label asp-for="SeatNumber">Seat Number</label>
                    <input asp-for="SeatNumber" class="form-control">
                    <span class="text-danger" asp-validation-for="SeatNumber"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                    @*<div class="invalid-feedback">Oh no! Email is invalid.</div>*@
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control">
                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                </div>
            </div>
            <div class="card-footer text-right">
                <button class="btn btn-primary">Submit</button>
                <a asp-action="Index" class="btn btn-secondary text-white">Go Back</a>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}