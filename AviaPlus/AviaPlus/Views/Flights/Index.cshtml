@model List<Flight>
<div class="row">
    <div class="col-12">
        <div class="card card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-header">Flights</h5>
                <a asp-action="Add" class="btn rounded-pill btn btn-primary text-white" style="margin-right:20px">Add</a>
            </div>
            <div class="table-responsive text-nowrap">
                <table id="myTickets" class="table">
                    <thead>
                        <tr>
                            <th>Flight Number</th>
                            <th>Departure</th>
                            <th>Status</th>
                            <th>Departure Time</th>
                            <th style="text-align:right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (Flight item in Model)
                        {
                            <tr>
                                <td>@item.FlightNumber</td>
                                <td>@item.Departure</td>
                                <td>
                                    @if (item.IsCancelled)
                                    {
                                        <span class="text-danger">Cancelled</span>
                                    }
                                    else
                                    {
                                        <span class="text-success">Landed</span>
                                    }
                                </td>
                                <td>@item.DepartureTime</td>
                                <td>
                                    <div class="d-flex justify-content-end">
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn rounded-pill btn btn-warning text-white" style="margin-right:5px">Detail</a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn rounded-pill btn btn-info text-white" style="margin-right:5px">Update</a>
                                        @if (item.IsCancelled)
                                        {
                                            <a asp-action="Activity" asp-route-id="@item.Id" class="btn rounded-pill btn btn-success text-white" style="margin-right:5px;width:120px">Landed</a>
                                        }
                                        else
                                        {
                                            <a asp-action="Activity" asp-route-id="@item.Id" class="btn rounded-pill btn btn-danger text-white" style="margin-right:5px;width:120px">Cancelled</a>
                                        }

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
