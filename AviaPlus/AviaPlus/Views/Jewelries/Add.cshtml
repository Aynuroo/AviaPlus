@model Jewelry
<div class="col-12">
    <div class="card">
        <form method="post" enctype="multipart/form-data">
            <div class="card-header">
                <h4>Add Jewelry</h4>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label" asp-for="Photo"></label>
                    <input accept="image/*" asp-for="Photo" class="form-control" id="basic-default-fullname">
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Brand">Brand</label>
                    <input asp-for="Brand" class="form-control">
                    <span class="text-danger" asp-validation-for="Brand"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ArticleNo">Article No</label>
                    <input asp-for="ArticleNo" class="form-control">
                    <span class="text-danger" asp-validation-for="ArticleNo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsFemale">Man / Woman</label>
                    <br />
                    <label>Man</label>
                    <input type="radio" value="false" style="margin-top:30px;margin-buttom:0px;width:35px;height:100%" asp-for="IsFemale" placeholder="IsFemale">
                    <label>Woman</label>
                    <input type="radio" value="true" style="margin-top:30px;margin-buttom:0px;width:35px;height:100%" asp-for="IsFemale" placeholder="IsFemale">
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Collection">Collection</label>
                    <input asp-for="Collection" class="form-control">
                    <span class="text-danger" asp-validation-for="Collection"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Color">Color</label>
                    <input asp-for="Color" class="form-control">
                    <span class="text-danger" asp-validation-for="Color"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MinimumLength">Minimum Length</label>
                    <input asp-for="MinimumLength" class="form-control">
                    <span class="text-danger" asp-validation-for="MinimumLength"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaximumLength">Maximum Length</label>
                    <input asp-for="MaximumLength" class="form-control">
                    <span class="text-danger" asp-validation-for="MaximumLength"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Width">Width</label>
                    <input asp-for="Width" class="form-control">
                    <span class="text-danger" asp-validation-for="Width"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Material">Material</label>
                    <input asp-for="Material" class="form-control">
                    <span class="text-danger" asp-validation-for="Material"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity">Quantity</label>
                    <input asp-for="Quantity" class="form-control">
                    <span class="text-danger" asp-validation-for="Quantity"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price ($)</label>
                    <input asp-for="Price" class="form-control">
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" class=" form-control"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="card-footer text-right">
                <button class="btn btn-primary">Submit</button>
                <a asp-action="Index" class="btn btn-secondary text-white">Go Back</a>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}